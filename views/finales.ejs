<% if (user && user.role==='admin') { %>
<div class="glass card p-4 mb-4">
  <!-- Cambiado: Materia, Año, Modalidad, Info. Libre, Info. Regular, Carrera -->
  <form id="finalesForm" method="POST" action="/admin/finales" class="grid md:grid-cols-6 gap-3">
    <!-- Materia (select con subjects) -->
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-slate-700 mb-1">Materia</label>
      <select name="subject_id" class="w-full h-10 rounded-xl border border-slate-200 px-3 bg-white" required>
        <option value="">Elegir materia…</option>
        <% (subjects||[]).forEach(s => { %>
          <option value="<%= s.id %>"><%= s.name %> <%= s.year ? `- ${s.year}º` : '' %></option>
        <% }) %>
      </select>
    </div>

    <!-- Año -->
    <div>
      <label class="block text-sm font-medium text-slate-700 mb-1">Año</label>
      <input type="number" name="year" placeholder="Ej: 3" class="w-full h-10 rounded-xl border border-slate-200 px-3" />
    </div>

    <!-- Modalidad -->
    <div>
      <label class="block text-sm font-medium text-slate-700 mb-1">Modalidad</label>
      <select class="w-full h-10 rounded-xl border border-slate-200 px-3 bg-white" name="modalidad" required>
        <option value="libre">Libre</option>
        <option value="regular">Regular</option>
        <option value="libre y regular">Libre y Regular</option>
      </select>
    </div>

    <!-- Carrera (texto, por si querés forzar una carrera distinta a la de la materia) -->
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-slate-700 mb-1">Carrera</label>
      <input type="text" name="career" placeholder="Ej: Lic. en Economía"
             value="<%= (user && user.career) ? user.career : '' %>"
             class="w-full h-10 rounded-xl border border-slate-200 px-3" />
    </div>

    <!-- Info. Libre -->
    <div class="md:col-span-3">
      <label class="block text-sm font-medium text-slate-700 mb-1">Info. Libre</label>
      <textarea name="libre" rows="3" placeholder="Escribí aquí la info de LIBRE"
                class="w-full rounded-xl border border-slate-200 px-3 py-2"></textarea>
    </div>

    <!-- Info. Regular -->
    <!-- Info. Regular -->
    <div class="md:col-span-3">
      <label class="block text-sm font-medium text-slate-700 mb-1">Info. Regular</label>
      <textarea name="regular" rows="3" placeholder="Escribí aquí la info de REGULAR"
                class="w-full rounded-xl border border-slate-200 px-3 py-2"></textarea>
    </div>

    <!-- DEFAULT para satisfacer NOT NULL en finals.exam_type -->
    <input type="hidden" name="exam_type" value="escrito y oral">

    <div class="md:col-span-6 flex items-center justify-end">
      <button class="h-10 px-4 rounded-xl bg-sky-600 text-white font-semibold hover:bg-sky-700" type="submit">
        Agregar fila
      </button>
    </div>
  </form>
</div>
<% } %>

<% if (user && user.role === 'admin') { %>
  <div class="flex items-center justify-end gap-2 mb-3">
    <button id="btnBulkDeleteFinals"
            class="h-9 px-3 rounded-lg bg-rose-600 text-white font-semibold hover:bg-rose-700 disabled:opacity-40 disabled:cursor-not-allowed"
            title="Eliminar finales seleccionados"
            disabled>
      <!-- SVG basurero -->
      <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor" style="display:inline-block;vertical-align:middle;margin-right:6px;">
        <path d="M9 3v1H4v2h16V4h-5V3H9zm-2 6h2v9H7V9zm4 0h2v9h-2V9zm4 0h2v9h-2V9z"></path>
      </svg>
      Eliminar seleccionados
    </button>
  </div>
<% } %>

<!-- data-user-career: enviá desde server el nombre de la carrera del usuario -->
<div id="finalesMain" class="card bg-white p-0 overflow-x-auto"
     data-user-career="<%= (user && (user.carrera || user.career || user.degree || '')) %>">

  <!-- Barra de búsqueda arriba a la derecha -->
  <div class="flex justify-end p-2">
    <div id="finalesSearchWrap" class="p-3 mb-4 flex items-center gap-2 max-w-md">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true" focusable="false">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M17 10.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z"/>
      </svg>
      <input 
        type="text" 
        id="searchInput" 
        placeholder="Buscar materia..." 
        class="bg-transparent outline-none w-full text-sm">
    </div>
  </div>

  <!-- Tabla -->
  <table class="min-w-full text-sm">
    <thead class="bg-slate-50">
      <tr>
        <th class="text-left p-3">Materia</th>
        <th class="text-left p-3">Año</th>
        <th class="text-left p-3">Modalidad</th>
        <th class="text-left p-3">Info. Libre</th>
        <th class="text-left p-3">Info. Regular</th>
        <th class="text-left p-3">Carrera</th>
        <% if (user && user.role === 'admin') { %>
          <th class="text-right p-3">Seleccionar</th>
        <% } %>
      </tr>
    </thead>
    <tbody id="cwFinalesBody"><!-- Render dinámico --></tbody>
  </table>
</div>

<!-- Modal de información -->
<div id="cwFinalesModal" class="fixed inset-0 z-[100000] hidden items-center justify-center">
  <div class="absolute inset-0 bg-black/40 backdrop-blur-sm" data-close="1"></div>
  <div class="relative w-[min(92vw,760px)] bg-white rounded-2xl border border-slate-200 shadow-2xl p-5 animate-[cwPop_.18s_ease-out]">
    <button class="absolute top-2 right-2 w-8 h-8 rounded-full border border-slate-200 bg-white shadow-inner" type="button" aria-label="Cerrar" title="Cerrar" data-close="1">×</button>
    <h3 id="cwFmTitle" class="font-black text-base tracking-[-.01em] mb-1">Información</h3>
    <p id="cwFmMeta" class="text-[13px] text-slate-600 mb-3"></p>
    <div id="cwFmBody" class="text-[14px] leading-6 text-slate-900 whitespace-pre-line"></div>
  </div>
</div>

<style>
@keyframes cwPop{0%{opacity:0;transform:scale(.98) translateY(8px)}100%{opacity:1;transform:scale(1) translateY(0)}}
</style>

