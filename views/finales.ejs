<script>
(function(){
  // ========= Utilidades =========
  const $ = (sel, root=document) => root.querySelector(sel);
  const $$ = (sel, root=document) => Array.from(root.querySelectorAll(sel));
  const safe = (v) => (v==null ? '' : String(v)).trim();
  const norm = (s='') => s.toString().toLowerCase().normalize('NFD').replace(/[\u0300-\u036f]/g,'').replace(/\./g,'').trim();

  const canonCareer = (s='') => {
    const n = norm(s);
    if (n.includes('admin')) return 'lic en administracion';
    if (n.includes('econom')) return 'lic en economia';
    if (n.includes('contador') || n.includes('contabilidad') || n === 'contabilidad') return 'contador publico';
    return n;
  };

  const isAdmin = <%- JSON.stringify(!!(user && user.role === 'admin')) %>;

  // ========= Cargar datos =========
  function readEmbeddedJson(){
    try{
      const tag = document.getElementById('finalsDataJson');
      if (!tag) return [];
      const txt = tag.textContent.trim();
      if (!txt) return [];
      const parsed = JSON.parse(txt);
      return Array.isArray(parsed) ? parsed : [];
    }catch(e){ return []; }
  }

  let DATA = readEmbeddedJson();
  if (!Array.isArray(DATA) || !DATA.length){
    if (Array.isArray(window.FINALS_DATA)) DATA = window.FINALS_DATA;
  }

  // Normalización
  DATA = (DATA || []).map(r => {
    const out = {
      id       : r.id ?? r.ID ?? r._id ?? null,
      carrera  : safe(r.carrera || r.Carrera),
      materia  : safe(r.materia || r.Materia || r.asignatura || r.Asignatura),
      catedra  : safe(r.catedra || r.Catedra || r.cátedra || r.Cátedra || ''),
      'año'    : safe(r['año'] ?? r.ano ?? r.anio ?? r.year ?? ''),
      modalidad: safe(r.modalidad || r.Modalidad || ''),
      regular  : safe(r.regular || r.Regular || ''),
      libre    : safe(r.libre || r.Libre || '')
    };

    const c = canonCareer(out.carrera);
    if (c === 'lic en administracion') out.carrera = 'Lic. en Administración';
    else if (c === 'lic en economia') out.carrera = 'Lic. en Economía';
    else if (c === 'contador publico') out.carrera = 'Contador Público';

    if (out.modalidad.toLowerCase() === 'nan') out.modalidad = '';
    if (out.regular.toLowerCase() === 'nan') out.regular = '';
    if (out.libre.toLowerCase() === 'nan') out.libre = '';

    if (!out.modalidad){
      const hasReg = !!out.regular;
      const hasLib = !!out.libre;
      out.modalidad = (hasReg && hasLib) ? 'Libre y Regular' : (hasReg ? 'Regular' : 'Libre y Regular');
    }

    return out;
  });

  // ========= Filtro por carrera (viewer) =========
  const main = document.getElementById('finalesMain');
  const VIEWER_RAW = main?.dataset.userCareer || '';
  theViewer = canonCareer(VIEWER_RAW); // keep variable name unique
  const VIEWER = theViewer;
  const SOURCE = VIEWER ? DATA.filter(r => canonCareer(r.carrera) === VIEWER) : DATA;

  // ========= Render =========
  const TBody  = document.getElementById('cwFinalesBody');
  const Modal  = document.getElementById('cwFinalesModal');
  const CloseEls = Modal.querySelectorAll('[data-close="1"]');
  const FmTitle = document.getElementById('cwFmTitle');
  const FmMeta  = document.getElementById('cwFmMeta');
  const FmBody  = document.getElementById('cwFmBody');
  let lastFocus = null;

  const fmtMateria = (m,c) => c ? `${m} — Cátedra "${c}"` : m;

  function row(record, idx){
    const year = (record['año'] ?? record.anio ?? record.ano ?? record.year ?? '').toString() || '—';
    const tr = document.createElement('tr');
    tr.className = 'border-t';
    if (record.id != null) tr.setAttribute('data-id', String(record.id));

    // Celda de selección (solo admin)
    const selCell = isAdmin
        ? `<td class="p-3 text-right">
            <input
              type="checkbox"
              class="final-chk h-5 w-5 rounded border-slate-300"
              data-id="${record.id != null ? String(record.id) : ''}"
              title="${record.id == null ? 'No hay ID en esta fila; no se podrá borrar desde aquí' : ''}">
          </td>`
        : '';

    tr.innerHTML = `
      <td class="p-3"><div class="font-semibold">${fmtMateria(safe(record.materia), safe(record.catedra))}</div></td>
      <td class="p-3">${year}</td>
      <td class="p-3">${safe(record.modalidad) || '—'}</td>
      <td class="p-3"><button class="btn btn-xs" data-kind="libre" data-idx="${idx}">ver</button></td>
      <td class="p-3"><button class="btn btn-xs" data-kind="regular" data-idx="${idx}">ver</button></td>
      <td class="p-3">${safe(record.carrera) || '—'}</td>
      ${selCell}
    `;
    return tr;
  }

  function render(){
    TBody.innerHTML = '';
    SOURCE.forEach((r,i)=> TBody.appendChild(row(r,i)));
    updateBulkButtonState();
  }

  // ===== Modal =====
  function openModal(kind, r){
    lastFocus = document.activeElement;
    FmTitle.textContent = kind === 'regular' ? 'Información (Regular)' : 'Información (Libre)';
    FmMeta.textContent = `${fmtMateria(r.materia, r.catedra)} · ${r.carrera} · Modalidad: ${r.modalidad || '—'}`;
    const content = safe(kind === 'regular' ? r.regular : r.libre);
    FmBody.textContent = content || 'No hay información.';
    Modal.classList.remove('hidden');
    Modal.classList.add('flex');
    document.documentElement.style.overflow = 'hidden';
  }
  function closeModal(){
    Modal.classList.add('hidden');
    Modal.classList.remove('flex');
    document.documentElement.style.overflow = '';
    lastFocus && typeof lastFocus.focus === 'function' && lastFocus.focus();
  }

  // Delegación click en "ver"
  TBody.addEventListener('click', (e)=>{
    const btn = e.target.closest('button[data-kind]');
    if(!btn) return;
    const idx = Number(btn.dataset.idx);
    const kind = btn.dataset.kind;
    const rec = SOURCE[idx];
    if(!rec) return;
    openModal(kind, rec);
  });

  // Cierre modal
  CloseEls.forEach(el=> el.addEventListener('click', closeModal));
  Modal.addEventListener('click', (e)=>{ if(e.target === Modal || e.target.hasAttribute('data-close')) closeModal(); });
  document.addEventListener('keydown', (e)=>{ if(e.key==='Escape' && !Modal.classList.contains('hidden')) closeModal(); });

  // ===== Búsqueda =====
  document.getElementById("searchInput")?.addEventListener("keyup", function() {
    const value = this.value.toLowerCase();
    Array.from(TBody.querySelectorAll("tr")).forEach(row => {
      const txt = row.textContent.toLowerCase();
      row.style.display = txt.includes(value) ? "" : "none";
    });
  });

  // ===== Borrado masivo (solo admin) =====
  const btnBulk = document.getElementById('btnBulkDeleteFinals');

  function getSelectedIds(){
    return Array.from(TBody.querySelectorAll('input.final-chk:checked'))
      .map(chk => parseInt(chk.getAttribute('data-id')||'', 10))
      .filter(Number.isFinite);
  }
  function updateBulkButtonState(){
    if (!btnBulk) return;
    // Habilitar si hay al menos UNA casilla marcada,
    // aunque no tenga data-id válido.
    const anyChecked = TBody.querySelector('input.final-chk:checked') !== null;
    btnBulk.disabled = !anyChecked;
  }
  if (isAdmin){
    TBody.addEventListener('change', (e)=>{
      if ((e.target instanceof HTMLInputElement) && e.target.classList.contains('final-chk')){
        updateBulkButtonState();
      }
    });

    btnBulk?.addEventListener('click', async ()=>{
      const ids = getSelectedIds();
      if (!ids.length) {
        alert('No hay selecciones válidas con ID para borrar.\nSi tildaste filas sin ID, no se pueden eliminar desde aquí.');
        return;
      }
      if (!confirm(`¿Eliminar ${ids.length} final(es) seleccionado(s)?`)) return;
      try{
        const r = await fetch('/admin/finales/batch', {
          method: 'DELETE',
          headers: { 'Content-Type':'application/json' },
          credentials: 'include',
          body: JSON.stringify({ ids })
        });
        const j = await r.json();
        if (!j.ok) throw new Error(j.error || 'No se pudo eliminar');

        ids.forEach(id => {
          const tr = TBody.querySelector(`tr[data-id="${id}"]`);
          if (tr) tr.remove();
        });

        updateBulkButtonState();

        const t = document.createElement('div');
        t.textContent = `Borrados ${j.deleted} final(es).`;
        t.className = 'fixed bottom-4 left-1/2 -translate-x-1/2 bg-black text-white px-4 py-2 rounded-lg text-sm shadow-lg';
        document.body.appendChild(t);
        setTimeout(()=> t.remove(), 2500);
      }catch(err){
        alert('Error: ' + (err.message || err));
      }
    });
  }

  render();
})();
</script>

